    "@types/nodemailer": "^6.4.6",
    "@types/validator": "^13.7.10",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.0",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.17.3",
    "express-validator": "^6.14.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.8.0",
    "pg": "^8.7.3",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
