    "@types/node": "^17.0.23",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "concurrently": "^7.0.0",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.15",
    "prisma": "^4.5.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  }
}
